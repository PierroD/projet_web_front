{% include 'head.html.twig' %}
<body class="register-body">
	<div class="login-container">
        <div class="card">
            <div class="card-title login-title">
                <h1>REGISTER</h1>
            </div>
            <div class="separator-h"></div>
            <div class="card-body">
                <form class="form" method="POST">
                    <div class="login-input-container">
                        <img src="../src/public_html/assets/images/username.png" height="20" width="20"/>
                        <input type="text" placeholder="Username..." class="login-input" name="username"/>
                    </div>
                    <div class="login-input-container">
                        <img src="../src/public_html/assets/images/country.png" height="20" width="20"/>
                        <input type="text" placeholder="City..." class="login-input" name="city"/>
                    </div>
                    <div class="login-input-container">
                        <img src="../src/public_html/assets/images/password.png" height="20" width="20"/>
                        <input type="password" placeholder="Password..." class="login-input" id="password" name="password">
                            <button id="showOrHide" onclick="show_or_hide()" class="login-show-hide">Show</button>
                        </input>
                    </div>
                    <button type="submit" value="Submit" class="login-button" >Register</button>
                    <p class="text-small text-lighter">Already have an account ? <a href="/login" class="clickable text-bold sign-link">Sign in</a></p>
                </form>
            </div>
        </div>
	</div>
</body>

<script type="text/javascript">
    function show_or_hide(){
        var elm_image = document.getElementById('password').type;
        var elm_text = document.getElementById('showOrHide').innerHTML;
        console.log(elm_image);
        document.getElementById('password').type = (elm_image === 'password' ? 'text' : 'password');
        console.log(elm_image);
        document.getElementById('showOrHide').innerHTML = (elm_text === 'Show' ? 'Hide' : 'Show');
    }
</script>
