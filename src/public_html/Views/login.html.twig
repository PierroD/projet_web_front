{% include 'head.html.twig' %}
<body class="login-body">
	<div class="login-container">
        <div class="card">
            <div class="card-title login-title">
                <h1>LOGIN</h1>
            </div>
            <div class="separator-h"></div>
            <div class="card-body">
                <div class="form">
                    <div class="login-input-container">
                        <img src="../src/public_html/assets/images/username.png" height="20" width="20"/>
                        <input type="text" placeholder="Username..." class="login-input"/>
                    </div>
                    <div class="login-input-container">
                        <img src="../src/public_html/assets/images/password.png" height="20" width="20"/>
                        <input type="password" placeholder="Password..." class="login-input" id="password">
                            <button id="showOrHide" onclick="show_or_hide()" class="login-show-hide">Show</button>
                        </input>
                    </div>
                    <button type="button" class="login-button">Login</button>
                    <p></p>
                </div>
            </div>
        </div>
	</div>

</body>

<script type="text/javascript">
    function show_or_hide(){
        var elm_image = document.getElementById('password').type;
        var elm_text = document.getElementById('showOrHide').innerHTML;
        console.log(elm_image);
        document.getElementById('password').type = (elm_image === 'password' ? 'text' : 'password');
        console.log(elm_image);
        document.getElementById('showOrHide').innerHTML = (elm_text === 'Show' ? 'Hide' : 'Show');
    }
</script>
